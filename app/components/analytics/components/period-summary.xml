<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns="http://schemas.nativescript.org/tns.xsd"
            rows="auto" columns="*,*,*"
            class="bg-white p-4 rounded-lg">
            
  <StackLayout col="0" class="text-center">
    <Label text="{{ stats.totalSpent | currency }}" 
           class="text-xl font-bold" />
    <Label text="Total Gasto" class="text-sm text-gray-600" />
  </StackLayout>
  
  <StackLayout col="1" class="text-center">
    <Label text="{{ stats.totalSaved | currency }}" 
           class="text-xl font-bold text-green-600" />
    <Label text="Economia" class="text-sm text-gray-600" />
  </StackLayout>
  
  <StackLayout col="2" class="text-center">
    <Label text="{{ stats.receiptCount }}" 
           class="text-xl font-bold" />
    <Label text="Notas" class="text-sm text-gray-600" />
  </StackLayout>
</GridLayout>